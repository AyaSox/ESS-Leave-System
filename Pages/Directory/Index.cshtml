@page "/Directory"
@model ESSLeaveSystem.Pages.Directory.IndexModel
@{
    ViewData["Title"] = "Company Directory";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800"><i class="fas fa-address-book me-2"></i>Company Directory</h1>
    </div>

    <div class="card shadow mb-3">
        <div class="card-body">
            <form method="get" class="row g-2 align-items-end">
                <div class="col-md-4">
                    <label class="form-label">Search</label>
                    <input class="form-control" name="Query" value="@Model.Query" placeholder="Name, email, number, job title" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Department</label>
                    <select class="form-select" name="DepartmentId">
                        <option value="">All</option>
                        @foreach (var d in Model.Departments)
                        {
                            <option value="@d.DepartmentId" selected="@(Model.DepartmentId == d.DepartmentId)">@d.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Manager</label>
                    <input class="form-control" name="Manager" value="@Model.Manager" placeholder="Manager name/email" />
                </div>
                <div class="col-md-2">
                    <button class="btn btn-success w-100" type="submit"><i class="fas fa-search me-2"></i>Search</button>
                </div>
            </form>
            <script>
                document.querySelector('input[name="Query"]').addEventListener('keypress', function (e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        this.form.submit();
                    }
                });
            </script>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-success">@Model.TotalResults result@(Model.TotalResults == 1 ? "" : "s")</h6>
        </div>
        <div class="card-body">
            @if (!Model.Results.Any())
            {
                <div class="text-muted">No employees found.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th></th>
                                <th class="text-success">Name</th>
                                <th>Job Title</th>
                                <th class="text-success">Email</th>
                                <th>Department</th>
                                <th>Manager</th>
                                <th>Hired</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var e in Model.Results)
                        {
                            <tr>
                                <td style="width:60px">
                                    @if (!string.IsNullOrWhiteSpace(e.ProfilePicturePath))
                                    {
                                        <img src="@e.ProfilePicturePath" class="rounded-circle" style="width:40px;height:40px;object-fit:cover;" alt="@e.FullName" />
                                    }
                                    else
                                    {
                                        <div class="rounded-circle bg-light d-flex justify-content-center align-items-center" style="width:40px;height:40px;"><i class="fas fa-user text-muted"></i></div>
                                    }
                                </td>
                                <td class="fw-semibold">
                                    <a asp-page="/Directory/Profile" asp-route-id="@e.EmployeeId" class="text-success">@e.FullName</a>
                                    <br /><small class="text-muted">@e.EmployeeNumber</small>
                                </td>
                                <td>@e.JobTitle</td>
                                <td><a href="mailto:@e.Email" class="text-success">@e.Email</a></td>
                                <td>@Model.GetDepartmentName(e.DepartmentId)</td>
                                <td>
                                    @if(Model.GetManagerName(e.LineManagerId) == "None")
                                    {
                                        <span class="text-muted">Top Level</span>
                                    }
                                    else
                                    {
                                        @Model.GetManagerName(e.LineManagerId)
                                    }
                                </td>
                                <td>@e.DateHired.ToString("MMM dd, yyyy")</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
