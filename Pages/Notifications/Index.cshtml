@page "/Notifications"
@model ESSLeaveSystem.Pages.Notifications.IndexModel
@{
    ViewData["Title"] = "Notifications";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800"><i class="fas fa-bell me-2"></i>All Notifications</h1>
        <div>
            <a asp-page="/Index" class="btn btn-outline-secondary btn-sm"><i class="fas fa-arrow-left me-1"></i>Back</a>
            @if (Model.UnreadCount > 0)
            {
                <form method="post" asp-page-handler="MarkAllAsRead" class="d-inline">
                    <button type="submit" class="btn btn-primary btn-sm"><i class="fas fa-check-double me-1"></i>Mark All as Read (@Model.UnreadCount)</button>
                </form>
            }
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <strong>@Model.TotalCount</strong> notifications
                @if (Model.UnreadCount > 0)
                {
                    <span class="badge bg-danger ms-2">@Model.UnreadCount unread</span>
                }
            </div>
        </div>
        <div class="card-body p-0">
            @if (!Model.Items.Any())
            {
                <div class="text-center text-muted py-5">
                    <i class="fas fa-bell-slash fa-3x mb-3"></i>
                    <div>No notifications to show</div>
                </div>
            }
            else
            {
                <div class="list-group list-group-flush">
                    @foreach (var n in Model.Items)
                    {
                        var unreadClass = n.IsRead ? "" : "bg-light";
                        var urgentClass = n.NotificationType == HRManagement.Shared.Models.NotificationType.LeaveUrgentApproval ? "border-start border-danger border-4" : string.Empty;
                        <div class="list-group-item @unreadClass @urgentClass">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <div class="d-flex align-items-center mb-1">
                                        @switch (n.NotificationType)
                                        {
                                            case HRManagement.Shared.Models.NotificationType.LeaveSubmitted:
                                                <i class="fas fa-paper-plane text-primary me-2"></i>
                                                break;
                                            case HRManagement.Shared.Models.NotificationType.LeaveApproved:
                                                <i class="fas fa-check-circle text-success me-2"></i>
                                                break;
                                            case HRManagement.Shared.Models.NotificationType.LeaveRejected:
                                                <i class="fas fa-times-circle text-danger me-2"></i>
                                                break;
                                            case HRManagement.Shared.Models.NotificationType.LeaveCancelled:
                                                <i class="fas fa-ban text-warning me-2"></i>
                                                break;
                                            case HRManagement.Shared.Models.NotificationType.LeaveRequiresApproval:
                                                <i class="fas fa-clock text-warning me-2"></i>
                                                break;
                                            case HRManagement.Shared.Models.NotificationType.LeaveUrgentApproval:
                                                <i class="fas fa-exclamation-triangle text-danger me-2"></i>
                                                break;
                                            case HRManagement.Shared.Models.NotificationType.LeaveAutoApproved:
                                                <i class="fas fa-robot text-info me-2"></i>
                                                break;
                                            default:
                                                <i class="fas fa-info-circle text-secondary me-2"></i>
                                                break;
                                        }
                                        <strong class="@(n.IsRead ? string.Empty : "fw-bold")">@n.Title</strong>
                                    </div>
                                    <div class="small text-muted">@n.Message</div>
                                    <small class="text-muted"><i class="far fa-clock"></i> @n.CreatedDate.ToString("MMM dd, yyyy HH:mm")</small>
                                </div>
                                <div class="ms-3 d-flex flex-column align-items-end">
                                    @if (!n.IsRead)
                                    {
                                        <form method="post" asp-page-handler="MarkAsRead" asp-route-id="@n.NotificationId">
                                            <button type="submit" class="btn btn-sm btn-outline-secondary mb-2"><i class="fas fa-check"></i></button>
                                        </form>
                                    }
                                    @if (!string.IsNullOrWhiteSpace(n.ActionUrl))
                                    {
                                        <a href="@n.ActionUrl" class="btn btn-sm btn-outline-primary"><i class="fas fa-arrow-right"></i></a>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pager -->
                <nav class="p-3" aria-label="Notifications pager">
                    <ul class="pagination justify-content-center mb-0">
                        <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : string.Empty)">
                            <a class="page-link" asp-page="/Notifications/Index" asp-route-pageNumber="@(Model.PageNumber - 1)">Previous</a>
                        </li>
                        <li class="page-item disabled"><span class="page-link">Page @Model.PageNumber of @Model.TotalPages</span></li>
                        <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : string.Empty)">
                            <a class="page-link" asp-page="/Notifications/Index" asp-route-pageNumber="@(Model.PageNumber + 1)">Next</a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

<style>
    .list-group-item.bg-light { background-color: #e7f3ff !important; }
    .border-4 { border-width: 4px !important; }
    .fa-robot { animation: none; }
    .fa-exclamation-triangle { animation: none; }
    .list-group-item { white-space: normal; }
    .pagination .page-link { cursor: pointer; }
    .disabled .page-link { cursor: default; }
</style>
