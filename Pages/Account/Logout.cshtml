@page
@model LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body text-center">
                    <i class="fas fa-sign-out-alt fa-3x text-muted mb-3"></i>
                    <h4>Logging out...</h4>
                    <p class="text-muted">Please wait while we sign you out.</p>
                    
                    <form method="post" asp-page="/Account/Logout" id="logoutForm">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-sign-out-alt me-2"></i>Complete Logout
                        </button>
                    </form>
                    
                    <div class="mt-3">
                        <a asp-page="/Index" class="btn btn-link">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Auto-submit the logout form after a short delay
    setTimeout(function() {
        document.getElementById('logoutForm').submit();
    }, 1000);
</script>