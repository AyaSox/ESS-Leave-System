@page
@model AdjustLeaveBalanceModel
@{
    ViewData["Title"] = "Adjust Leave Balance";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-balance-scale me-2"></i>Adjust Leave Balance
        </h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-page="/Index">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-page="/Admin/Index">Admin</a></li>
                <li class="breadcrumb-item active">Adjust Leave Balance</li>
            </ol>
        </nav>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-edit me-2"></i>Manual Leave Balance Adjustment
                    </h6>
                    <small class="text-muted">For exceptional cases: backdated hires, data migrations, corrections</small>
                </div>
                <div class="card-body">
                    
                    <!-- Employee Selection -->
                    <form method="get" class="mb-4">
                        <div class="row">
                            <div class="col-md-8">
                                <label for="employeeId" class="form-label">Select Employee</label>
                                <select name="employeeId" class="form-select" onchange="this.form.submit()">
                                    <option value="">-- Select an Employee --</option>
                                    @foreach (var employee in Model.AllEmployees)
                                    {
                                        <option value="@employee.EmployeeId" selected="@(employee.EmployeeId == Model.SelectedEmployeeId)">
                                            @employee.FullName (@employee.Email)
                                        </option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="year" class="form-label">Year</label>
                                <select name="year" class="form-select" onchange="this.form.submit()">
                                    @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 5; y--)
                                    {
                                        <option value="@y" selected="@(y == Model.SelectedYear)">@y</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </form>

                    @if (Model.SelectedEmployeeId.HasValue)
                    {
                        <!-- Employee Info -->
                        <div class="alert alert-info">
                            <h6><i class="fas fa-user me-2"></i>@Model.SelectedEmployee?.FullName</h6>
                            <p class="mb-0">
                                <strong>Hire Date:</strong> @Model.SelectedEmployee?.DateHired.ToString("MMM dd, yyyy") | 
                                <strong>Email:</strong> @Model.SelectedEmployee?.Email
                            </p>
                        </div>

                        <!-- Current Balances -->
                        @if (Model.CurrentBalances.Any())
                        {
                            <h6 class="mb-3">Current Leave Balances (@Model.SelectedYear)</h6>
                            <div class="table-responsive mb-4">
                                <table class="table table-striped">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Leave Type</th>
                                            <th>Total Days</th>
                                            <th>Used Days</th>
                                            <th>Pending Days</th>
                                            <th>Available Days</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var balance in Model.CurrentBalances)
                                        {
                                            var leaveType = Model.LeaveTypeLookup.GetValueOrDefault(balance.LeaveTypeId);
                                            <tr>
                                                <td>
                                                    <span class="badge @(leaveType?.Color ?? "bg-primary")">
                                                        @(leaveType?.Name ?? "Unknown")
                                                    </span>
                                                </td>
                                                <td>@balance.TotalDays</td>
                                                <td>@balance.UsedDays</td>
                                                <td>@balance.PendingDays</td>
                                                <td><strong>@balance.AvailableDays</strong></td>
                                                <td>
                                                    <button type="button" class="btn btn-sm btn-warning" 
                                                            data-bs-toggle="modal" 
                                                            data-bs-target="#adjustModal"
                                                            onclick="setupAdjustment(@balance.LeaveBalanceId, '@(leaveType?.Name ?? "Unknown")', @balance.TotalDays, @balance.UsedDays)">
                                                        <i class="fas fa-edit"></i> Adjust
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <h6><i class="fas fa-exclamation-triangle me-2"></i>No Leave Balances Found</h6>
                                <p class="mb-0">This employee has no leave balances for @Model.SelectedYear. You can:</p>
                                <form method="post" asp-page-handler="InitializeBalances" class="mt-2">
                                    <input type="hidden" name="employeeId" value="@Model.SelectedEmployeeId" />
                                    <input type="hidden" name="year" value="@Model.SelectedYear" />
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-plus-circle me-2"></i>Initialize Leave Balances for @Model.SelectedYear
                                    </button>
                                </form>
                            </div>
                        }

                        <!-- Add Missing Leave Types -->
                        @if (Model.MissingLeaveTypes.Any())
                        {
                            <h6 class="mb-3">Add Missing Leave Types</h6>
                            <form method="post" asp-page-handler="AddLeaveType" class="mb-4">
                                <input type="hidden" name="employeeId" value="@Model.SelectedEmployeeId" />
                                <input type="hidden" name="year" value="@Model.SelectedYear" />
                                <div class="row">
                                    <div class="col-md-6">
                                        <select name="leaveTypeId" class="form-select" required>
                                            <option value="">-- Select Leave Type --</option>
                                            @foreach (var leaveType in Model.MissingLeaveTypes)
                                            {
                                                <option value="@leaveType.LeaveTypeId">@leaveType.Name</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <input type="number" step="0.1" name="totalDays" class="form-control" placeholder="Days" required />
                                    </div>
                                    <div class="col-md-3">
                                        <button type="submit" class="btn btn-success">
                                            <i class="fas fa-plus"></i> Add
                                        </button>
                                    </div>
                                </div>
                            </form>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Adjustment Modal -->
<div class="modal fade" id="adjustModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="AdjustBalance">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-balance-scale me-2"></i>Adjust Leave Balance
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="balanceId" id="adjustBalanceId" />
                    
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Caution:</strong> This will modify leave balance records. Ensure you have proper authorization.
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Leave Type</label>
                        <input type="text" class="form-control" id="adjustLeaveType" readonly />
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label">Total Days</label>
                            <input type="number" step="0.1" name="totalDays" id="adjustTotalDays" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Used Days</label>
                            <input type="number" step="0.1" name="usedDays" id="adjustUsedDays" class="form-control" required />
                        </div>
                    </div>

                    <div class="mt-3">
                        <label class="form-label">Reason for Adjustment</label>
                        <textarea name="reason" class="form-control" rows="3" required 
                                  placeholder="e.g., Backdated hire correction, Data migration, HR policy change"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save me-2"></i>Apply Adjustment
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function setupAdjustment(balanceId, leaveType, totalDays, usedDays) {
        document.getElementById('adjustBalanceId').value = balanceId;
        document.getElementById('adjustLeaveType').value = leaveType;
        document.getElementById('adjustTotalDays').value = totalDays;
        document.getElementById('adjustUsedDays').value = usedDays;
    }
</script>