@page
@model AdminIndexModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-cogs me-2"></i>Admin Dashboard
        </h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-page="/Index">Dashboard</a></li>
                <li class="breadcrumb-item active">Admin</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <!-- Leave Management Tools -->
        <div class="col-xl-6 col-lg-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Leave Management Tools
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">HR Administration</div>
                            <p class="text-muted small mb-0">Manage employee leave balances and exceptional cases</p>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-balance-scale fa-2x text-primary"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-page="/Admin/AdjustLeaveBalance" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit me-2"></i>Adjust Leave Balances
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Employee Management -->
        <div class="col-xl-6 col-lg-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Employee Management
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">HR System</div>
                            <p class="text-muted small mb-0">Access the main HR management system</p>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-success"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="http://localhost:5000" target="_blank" class="btn btn-success btn-sm">
                            <i class="fas fa-external-link-alt me-2"></i>Open HR System
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- System Statistics -->
        <div class="col-xl-12 col-lg-12 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-bar me-2"></i>System Overview
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="text-center">
                                <h4 class="text-primary">@Model.TotalEmployees</h4>
                                <p class="text-muted small mb-0">Total Employees</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <h4 class="text-warning">@Model.PendingLeaveApplications</h4>
                                <p class="text-muted small mb-0">Pending Leave Applications</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <h4 class="text-success">@Model.EmployeesWithBalances</h4>
                                <p class="text-muted small mb-0">Employees with Leave Balances</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <h4 class="text-info">@Model.EmployeesWithoutManager</h4>
                                <p class="text-muted small mb-0">Employees Without Manager</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Actions -->
        <div class="col-xl-12 col-lg-12 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-history me-2"></i>Quick Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <div class="d-grid">
                                <a asp-page="/Admin/EmployeeLeaveBalances" class="btn btn-outline-primary">
                                    <i class="fas fa-users-cog me-2"></i>Employee Leave Balances
                                </a>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="d-grid">
                                <a asp-page="/Admin/AdjustLeaveBalance" class="btn btn-outline-warning">
                                    <i class="fas fa-balance-scale me-2"></i>Adjust Leave Balances
                                </a>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="d-grid">
                                <a href="http://localhost:5000/Employees" target="_blank" class="btn btn-outline-success">
                                    <i class="fas fa-user-plus me-2"></i>Manage Employees
                                </a>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="d-grid">
                                <a asp-page="/Admin/LeaveStatistics" class="btn btn-outline-info">
                                    <i class="fas fa-chart-line me-2"></i>Leave Statistics
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Employees Without Manager Alert -->
    @if (Model.EmployeesWithoutManager > 0)
    {
        <div class="alert alert-warning" role="alert">
            <h6><i class="fas fa-exclamation-triangle me-2"></i>Action Required</h6>
            <p class="mb-0">
                There are <strong>@Model.EmployeesWithoutManager employees</strong> without assigned Line Managers. 
                These employees cannot apply for leave until managers are assigned.
                <a href="http://localhost:5000/Employees" target="_blank" class="alert-link">
                    Assign managers now ?
                </a>
            </p>
        </div>
    }
</div>